# AgentWeaver configuration template - copy to .env and configure

# Redis for state persistence and message queuing
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL for persistent storage (optional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agentweaver
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# FastAPI server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

LOG_LEVEL=INFO

# Agent orchestration limits
DEFAULT_AGENT_TIMEOUT=30
MAX_CONCURRENT_AGENTS=10

LANGGRAPH_THREAD_TIMEOUT=300
